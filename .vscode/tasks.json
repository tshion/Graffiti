{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "JSONdotNET: edit c# in docker",
            "type": "shell",
            "command": "docker",
            "args": [
                "run",
                "--rm",
                "-it",
                "-v",
                "${workspaceFolder}/JSONdotNET:/home/worker",
                "mcr.microsoft.com/dotnet/core/sdk:3.1"
            ],
        },
        {
            "label": "Open Mandelbrot",
            "type": "shell",
            "command": "code",
            "args": [
                "MandelbrotSet"
            ],
        },
        {
            "label": "RxJS: edit in docker",
            "type": "shell",
            "command": "docker",
            "args": [
                "run",
                "--rm",
                "-it",
                "-p",
                "4200:4200",
                "-p",
                "8100:8100",
                "-p",
                "8887:8887",
                "-p",
                "9876:9876",
                "-p",
                "35729:35729",
                "-p",
                "53703:53703",
                "-v",
                "${workspaceFolder}/RxJS:/home/worker",
                "tshion/ionic-repl:6.12.3"
            ],
        },
        {
            "label": "SwiftRecipe: Develop in docker",
            "type": "shell",
            "command": "docker",
            "args": [
                "run",
                "--rm",
                "-it",
                "-v",
                "${workspaceFolder}/SwiftRecipe:/home/worker",
                "tshion/swift-repl:2021-03-25-a"
            ]
        }
    ]
}